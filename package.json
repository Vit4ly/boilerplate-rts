{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack s --mode development --open --port 5000 --static-directory ./out --stats-error-details",
    "dev:copy": "cross-env NODE_ENV=development webpack s --mode development --stats-error-details",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "build:dev": "cross-env NODE_ENV=development webpack --mode development",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --verbose ./src",
    "test:unit:copy": "jest --verbose ./__tests__/unit",
    "test:e2e": "jest --config=jest-playwright.config.ts --verbose __tests__/e2e --passWithNoTests",
    "test:coverage": "jest --config=jest-playwright.config.ts --coverage",
    "stats": "cross-env SMP=OFF webpack --json > stats.json && webpack-bundle-analyzer stats.json out",
    "clean": "rimraf node_modules out stats.json",
    "eslint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "eslint:fix": "eslint ./src/**/*.{js,jsx,ts,tsx} --fix",
    "eslint:pre-commit": "eslint ./src/**/*.{js,jsx,ts,tsx} --fix --color --maxwarnings=0",
    "prettier:pre-commit": "prettier --write ./src/**/*.{js,jsx,ts,tsx}",
    "stylelint": "stylelint **/*.scss",
    "stylelint:fix": "stylelint **/*.scss --fix",
    "stylelint:pre-commit": "stylelint **/*.scss --fix --color --maxwarnings=0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.2",
    "@types/lodash": "^4.14.188",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@types/react-redux": "^7.1.24",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.7.2",
    "babel-loader": "^9.1.0",
    "babel-plugin-jsx-remove-data-test-id": "^3.0.0",
    "babel-plugin-named-asset-import": "^0.3.8",
    "babel-plugin-transform-amd-to-commonjs": "^1.6.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest-dom": "^4.0.2",
    "eslint-plugin-jsdoc": "^39.6.2",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.9.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-jasmine2": "^29.3.1",
    "node-fetch": "^3.2.10",
    "prettier": "^2.7.1",
    "pretty": "^2.0.0",
    "process": "^0.11.10",
    "rimraf": "^3.0.2",
    "sass": "^1.56.0",
    "sass-loader": "^13.1.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "thread-loader": "^3.0.4",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "tslib": "^2.4.1",
    "typescript": "^4.8.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.4.3",
    "redux": "^4.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,scss}": [
      "npm run prettier:pre-commit"
    ]
  },
  "src/**/*.scss": [
    "npm run stylelint:pre-commit"
  ],
  "src/**/*.{ts,tsx,js,jsx}": [
    "npm run eslint:pre-commit"
  ]
}
